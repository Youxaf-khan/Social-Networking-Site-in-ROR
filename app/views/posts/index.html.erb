<%= link_to "New Post", new_post_path %>
<br>
<% @posts.each do |post| %>
   <h2> <%= post.title %> </h2>
   <div> <%= truncate(post.description,:length => 10) %> </div>
   <br>
  <div class="form-group">
    <% if post.image.attached? %>
    <%= image_tag post.image, style: "width: 200px; display: block" %>
    <% end %>
  </div>
 <%= link_to "Read Post", post %>
   <br/>
<%end%>

<% if current_user %>
<div class="actions">
    <%= button_to "logout", destroy_user_session_path, method: :delete , class: 'btn btn-primary' %>
</div>
<% end %>
