<h1><%= @post.title %> </h1>
<div>
  <%= @post.description %>
</div>
<br>
<% if @post.image.attached?%>
  <p>
    <%= image_tag @post.image.variant(resize: "250x250") %>
  </p>
  <% end %>

<%= link_to "Edit Post", edit_post_path(@post) %>
<%= button_to "Delete", post_path(@post), method: :delete %>

<h3>Comments</h3>
<%= render @post.comments%>

<h3>Add a comment:</h3>
<%= render 'comments/form' %>
